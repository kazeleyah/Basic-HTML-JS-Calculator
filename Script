<input type="button" class="operation-button" value="รท"
onclick="appendToDisplay('/')">
<input type="button" class="operation-button" value="ร"
onclick="appendToDisplay('*')">
<input type="button" class="operation-button" value="-"
onclick="appendToDisplay('-')">
<input type="button" class="operation-button" value="+"
